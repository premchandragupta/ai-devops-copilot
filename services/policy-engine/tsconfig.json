{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
	"rootDir": "src",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "config/**/*.json",
    "rules/**/*"
  ]
}

